    <!-- RESULT COUNT -->
    <div class="result-count" id="resultCount"></div>

    <!-- MAIN CONTENT -->
    <main class="container" id="priceContainer">
      <!-- Disclaimer -->
      <div class="disclaimer-banner">
        <i class="fas fa-exclamation-triangle"></i>
        <p>
          <strong>Heads up:</strong> These are average reference prices across
          major Kenyan towns. Actual prices vary by location, season, and
          demand. Always negotiate wisely!
        </p>
      </div>
    </main>

    <!-- SHARE -->
    <div class="share-bar">
      <p>Help others avoid getting overcharged ‚Äî share this page ü§ù</p>
      <div class="share-buttons">
        <button class="share-btn whatsapp" id="shareWA">
          <i class="fab fa-whatsapp"></i> WhatsApp
        </button>
        <button class="share-btn twitter" id="shareTW">
          <i class="fab fa-twitter"></i> Post
        </button>
        <button class="share-btn copy-link" id="copyLink">
          <i class="fas fa-link"></i> Copy Link
        </button>
      </div>
    </div>

    <!-- TOAST -->
    <div class="copied-toast" id="toast">Link copied!</div>

    <!-- FOOTER -->
    <footer>
      <strong>Kenya Quick Prices</strong> ‚Äî built for the people üá∞üá™<br />
      Average reference prices ‚Ä¢ Location &amp; demand may vary<br />
      &copy; 2025 KQP &middot; Made with ‚ù§Ô∏è in Nairobi
    </footer>

    <!-- SCROLL TO TOP -->
    <button class="scroll-top" id="scrollTop" aria-label="Scroll to top">
      <i class="fas fa-chevron-up"></i>
    </button>

    <script>
